@model List<GymEShopAdminApplication.Models.Order>

<div class="container">

    <div class="row">
        <a class="btn btn-outline-success" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>
    </div>

    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Customer Name</th>
                <th scope="col">Product Number</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];

            <tr>
                <th scope="row">@(i+1)</th>
                <td>@item.User.UserName</td>
                <td>@item.Products.Count</td>
                <td><a class="btn btn-info" asp-action="CreateInvoice" asp-route-id="@item.Id">Create Invoice</a></td>
                <td><a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
            </tr>

            }
        </tbody>


    </table>

</div>